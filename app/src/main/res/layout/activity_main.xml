<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="LOGO"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:background="#ccc"
        android:textColor="#f00"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_above="@id/btn_add_wort"
        android:layout_marginTop="10dp">

        <Button
            android:text="<"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <TextView android:text="Schigg"
                android:layout_marginBottom="20dp"
                android:textSize="40dp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ccc"
                android:textColor="#f00"
                android:id="@+id/main_wort" />

            <TextView android:text="Ä chlini härzegi Dose mit fein schmöckendem Inhalt"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:gravity="center"
                android:background="#ccc"
                android:textColor="#f00"
                android:id="@+id/main_beschribig" />

            <TextView android:text="PLZ: 3673"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:background="#ccc"
                android:textColor="#f00"
                android:id="@+id/main_plz" />

        </LinearLayout>

        <Button
            android:text=">"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="100dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_add_wort"
        android:text="Begriff eingeben"
        android:layout_width="fill_parent"
        android:editable="true"
        android:background="#eee"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:shadowColor="#000"
        android:onClick="btn_new_wort()"
        android:layout_alignParentBottom="true"
        android:layout_height="30dp" />

</RelativeLayout>
